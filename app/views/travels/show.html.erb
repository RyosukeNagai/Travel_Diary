<div class="container">
 <div class="row" style="margin-left: 20%;">
  <div class="col-xs-10 col-xs-offset-1">
   
   <div class="user-image">
    <div class="col-xs-2"> 
     <%= attachment_image_tag @user,:user_image,:fill, 100, 100, fallback: "no_image.jpg",class: "img-responsive img-circle" %>
    </div>
   </div>

   <div class="user-table">
    <div class="col-xs-3">
     <p>ニックネーム</p>
    </div>
    <div class="hoge">
     <div class="col-xs-7">
      <p><%= @user.name %></p>
     </div>
    </div>
   </div>

   <div class="user-table2">
    <div class="col-xs-3">
     <p>タイトル</p>
    </div>
    <div class="col-xs-7">
     <%= @travel.title %>
    </div>
   </div>

   <div class="user-table2">
   <div class="col-xs-3">
    <p>旅行先住所</p>
  </div>
    <div class="col-xs-3">
    <%= @travel.addres %>
  </div>
</div>
  </div>  
 </div>
</div >
<div class="row" style="margin-right: 250px;">
<div class="show-image">
          <%= attachment_image_tag @travel,:travel_image,format:"jpg",
                  fallback:"top_page.jpg", class:"travel-image" %>
        </div>
      </div>

        <div class="container">

          <div class="row" style="margin-left: 30%;">
            <div class="col-xs-2 col-xs-offset-4">
              <p class="travel-table">コメントする</p>
            </div>
            <div class="col-xs-6">
              <p class="travel-table">いいね!❤️_数</p>
            </div>
          </div>

          <div class="row">
            <div class="col-xs-2 col-xs-offset-4">
              <p class="travel-table">ないよう</p>
            </div>
            <div class="col-xs-6">
              <%= @travel.body %>
            </div>
          </div>

          <div class="row">
            <div class="col-xs-2 col-xs-offset-4">
              <p class="comment">コメント一覧</p>
            </div>
            <div class="col-xs-6">
            </div>
          </div>

          <div class="edit">
          <%= link_to "編集する",edit_travel_path(@travel),
                  class: "btn btn-success" %>
                </div>

        <div class="destroy">
          <%= link_to "削除する",travel_path(@travel), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"},
                  class: "btn btn-danger" %>
                </div>

