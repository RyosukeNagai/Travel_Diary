<div class="container">
 <div class="row">
    <div class="new-button">
      <p class="button-title">新規投稿</p>
      <a class="far fa-address-book faa-wrench fa-4x animated my-orange" href="http://localhost:3000/travels/new"></a>
    </div>
    <div class="col-xs-10 col-xs-offset-1">
    <% @travels.each do |travel| %>
        <div class="users" style="margin-top: 15px">
          <%= link_to (travel) do %>
        <%= attachment_image_tag travel,:travel_image,format:"jpg",fallback:"travel-no-image.jpg", class:"travel-image",style:"margin-left:18%;"%>
          <% end %>
      </div>
          
          <div class="user-image">
            <div class="col-xs-2">
              <%= link_to (travel.user) do %>
                <%= attachment_image_tag travel.user,:user_image,:fill, 80, 80, fallback: "no_image.jpg",class: "img-responsive img-circle" %>
              <% end %>
            </div>
          </div>
          <div class="col-xs-10">
          <div class="user-table">
            <div class="col-xs-2">
              <p>ニックネーム</p>
            </div>
            <div class="hoge">
              <div class="col-xs-2">
                <%= link_to (travel.user) do %>
                  <b><%= travel.user.name %></b>
                <% end %>
              </div>
            </div>
            <!-- いいね機能 -->
            <div class="col-xs-2">
              <% if travel.favorited_by?(current_user) %>
                <%= link_to travel_favorites_path(travel), method: :delete do %>
                  <%= content_tag :span, "", class: "glyphicon glyphicon-heart red" %>
                  <%= travel.favorites.count %>
                <% end %>
              <% else %>
                <%= link_to travel_favorites_path(travel), method: :post do %>
                  <%= content_tag :span, "", class: "glyphicon glyphicon-heart-empty" %>
                  <%= travel.favorites.count %>
                <% end %>
              <% end %>
            </div>
            <!-- いいね機能終わり -->
            <!-- コメント -->
            <div class="col-xs-3">
              <p>コメント数：<%= link_to new_travel_comment_path(travel),method: :get do %><b><%= travel.comments.count %><% end %>件</b>
            </div>
            <div class="col-xs-3">
              <%= link_to new_travel_comment_path(travel),method: :get do %><p>コメントする</p><% end %>
            </div>
          </div>
        </div>

        <div class="user-table2">
          <div class="col-xs-2">
            <p>タイトル</p>
          </div>
          <div class="col-xs-7">
            <%= link_to (travel) do %>
              <b><%= travel.title %></b>
            <% end %>
          </div>
        </div>

       <div class="user-table2">
          <div class="col-xs-2">
          <p>ないよう</p>
         </div>
         <div class="col-xs-8">
            <b><%= travel.body %></b>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>