<html>
  <head>
    <link href="https://fonts.googleapis.com/css?family=Permanent+Marker" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Teko" rel="stylesheet">
    <link href="https://fonts.googleapis.com/earlyaccess/nicomoji.css" rel="stylesheet" />
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome-animation/0.0.10/font-awesome-animation.css" type="text/css" media="all" />
    <title>TravelDiary</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body style="background-color:#E6FFE9;">
    <header class="navbar navbar-light" style="background-color:#E6FFE9;">
      <div class="container">
        <div class="row">
          <div class="col-xs-10 col-xs-offset-1">
            <h1 class="title">~ <i class="fas fa-suitcase"></i><b class="nam-ti"> T</b>ravel <b class="nam-ti2">D</b>iary <i class="fas fa-globe-asia"></i> ~</h1>
          </div>
        </div>
      </div>
      <nav>
        <% if user_signed_in? %>
            <div class="container">
              <div class="row">
                <div class="col-xs-4 col-xs-offset-5">
                  <div class="nav-item-name">WellcoM!! <%= current_user.name %> ♪</div>
                </div>
              </div>
            </div>
           <ul class="nav navbar-nav"style="margin-left: 15%;"> 
            <div class="container">
              <div class="row">
                <div class="col-xs-3">
                  <li class="nav-item"><%= link_to ' マイページ', user_path(current_user), class:"fas fa-child faa-float animated my-red" %></li>
                </div>
                <div class="col-xs-2">
                  <li class="nav-item"><%= link_to ' 投稿一覧', travels_path, class:"fas fa-users faa-float animated my-red" %></li>
                </div>
                <div class="col-xs-2">
                  <li class="nav-item"><%= link_to ' しおり', shioris_path, class:"fas fa-pencil-alt faa-float animated my-red" %></li>
                </div>
                <div class="col-xs-2">
                  <li class="nav-item"><%= link_to ' map検索', maps_index_path,class:"fas fa-map-marker-alt faa-float animated my-red" %></li>
                </div>
                <div class="col-xs-3">
                  <li class="nav-item"><%= link_to ' ログアウト', destroy_user_session_path,method: :delete, class:"fas fa-sign-out-alt faa-float animated my-red" %></li>
                </div>
              </div>
            </div>
          </ul>
        <% else %>
          <ul class="nav navbar-nav navbar-right">
            <div class="container">
              <div class="row">
                <div class="col-xs-2">
                  <li class="new-nav-item"><%= link_to 'Home', root_path,class:"fas fa-home faa-pulse animated my-red" %></li>
                </div>
                <div class="col-xs-3">
                  <li class="new-nav-item2"><%= link_to ' About', home_about_path, class:"fas fa-briefcase faa-pulse animated my-red" %></li>
                </div>
                <div class="col-xs-3">
                  <li class="new-nav-item"><%= link_to ' sign Up', new_user_registration_path, class:"fas fa-user faa-pulse animated my-red" %></li>
                </div>
                <div class="col-xs-2">
                  <li class="new-nav-item"><%= link_to ' login', new_user_session_path, class:"fas fa-bicycle faa-pulse animated my-red" %></li>
                </div>
              </div>
            </div>
          </ul>
        <% end %>
        </nav>
    </header>
      <div class="wrapper">
        <%= yield %>
      </div>
      <footer>
        <div class="footer2">
          <h3 class="foot-title">@Travel Diary　<i class="fas fa-suitcase-rolling fa-2x"></i></h3>
        </div>
      </footer>
  </body>
</html>
