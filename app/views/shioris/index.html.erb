<div class="each">
	<div class="container">
		<div class="row" style="margin-left: 25%;">
			<div class="col-xs-7">
				<h2 class="head-title6">〜 旅のしおり 〜</h2>
			</div>
			<div class="col-xs-5">
				<div class="new-button2">
					<p class="button-title">しおりの作成</p>
				<a class="far fa-address-book faa-wrench fa-5x animated my-orange" href="http://localhost:3000/shioris/new"></a>
				</div>
			</div>
		</div>
	</div>

<div class="container">
	<div class="row">
		<% @myshioris.each do |myshiori| %>
			<div class="col-xs-4">
				<%= link_to (myshiori) do %>
				<div class="shioris-title">
				<b>＃<%= myshiori.title %></b>
				</div>
			<div class="col-xs-10 col-xs-offset-1">
    		</div>
				<div class="each-image">
					<%= attachment_image_tag myshiori, :shiori_image, :fill, 350, 300, fallback: "shiori-no-image.jpg" %>
				</div>
				<% end %>
    		<div class="col-xs-10 col-xs-offset-1">
      			<b>・<%= myshiori.body %></b>
    		</div>
    		<div class="col-xs-3 col-xs-offset-1">
     			<b>・作成日</b>
    		</div>
    		<div class="col-xs-8">
     			<b><%= myshiori.created_at.strftime('%Y/%m/%d') %><b>
    		</div>
            </div>
		<% end %>
	</div>
</div>
