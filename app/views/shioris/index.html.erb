<% breadcrumb :shiori_index %>
<div class="shiori">
	<div class="container">
		<div class="row" style="">
			<div class="col-xs-12">
				<a class="fas fa-bookmark" href="/shioris/new"></a>
				<div class="shiori__title">旅のしおり</div>
			</div>
		</div>
	</div>

<div class="container">
	<div class="row">
		<% @myshioris.each do |myshiori| %>
			<div class="col-lg-4">
				<%= link_to (myshiori) do %>
				<div class="shiori-title">
				<b>＃<%= myshiori.title %></b>
				</div>
			<div class="col-xs-10 col-xs-offset-1">
    		</div>
				<div class="each-imaged">
					<%= attachment_image_tag myshiori, :shiori_image,fallback: "shiori-no-image.jpg" %>
				</div>
				<% end %>
    		<div class="col-xs-12" style="margin-top: 0px;">
      			<b>・<%= myshiori.body %></b>
    		</div>
    		<div class="col-xs-6">
     			<b>・作成日</b>
    		</div>
    		<div class="col-xs-6">
     			<b><%= myshiori.created_at.strftime('%Y/%m/%d') %></b>
    		</div>
            </div>
		<% end %>
	</div>
</div>
</div>
