<div class="container">
 <div class="row">
  <div class="col-xs-6 col-xs-offset-3">
   <h2 class="head-title5">〜 プロフィール編集 〜</h2>
  </div>
 </div>
 
 <div class="row">
  <div class="col-xs-10 col-xs-offset-2">
   <%= form_for(@user) do |f| %>
    <div class="col-xs-2">
         <%= attachment_image_tag @user, :user_image, :fill, 100, 100, fallback: "no_image.jpg",class: "img-responsive img-circle" %><br>
     <%= f.attachment_field :user_image, class: "user_image" %>
    </div>
    <div class="user-name">
        <div class="col-xs-2">
      <%= f.label :name %>
     </div>
     <div class="user-name-nick">
      <div class="col-xs-6">
       <%= f.text_field :name, class: "name" %>
      </div>
     </div>
    </div><br>
    <div class="introduce">     
     <div class="col-xs-2">
      <%= f.label :自己紹介 %>
     </div>
     <div class="col-xs-8">
      <%= f.text_area :introduce, class: "introduction" %>
     </div>     
    </div>
   </div>
  </div>
  <div class="row">
   <div class="col-xs-10 col-xs-offset-2">
    <div class="col-xs-2 col-xs-offset-5">
     <div class="update-btn">
     <%= f.submit "Update", class:"btn btn-success btn-lg" %> 
     <% end %>
    </div>
  </div>
 </div>
</div>