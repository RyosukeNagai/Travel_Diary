<div class="container">
 <div class="row">
  <div class="col-xs-10 col-xs-offset-1">
   
   <div class="user-image">
    <div class="col-xs-2"> 
     <%= attachment_image_tag user, :user_image_id, :fill, 100, 100, fallback: "no_image.jpg",class: "img-responsive img-circle" %>
    </div>
   </div>
   <div class="user-name">
    <div class="col-xs-3">
     <p>ニックネーム</p>
    </div>
    <div class="user-name-nick">
     <div class="col-xs-7"> 
      <p><%= user.name %></p>
     </div>
    </div>
   </div>
   <div class="introduce">
    <div class="col-xs-3">
     <p>自己紹介</p>
    </div>
    <div class="col-xs-7">
     <p><%= user.introduce %></p>
    </div>
   </div>
  </div>  
 </div>

 <div class="row">
  <div class="col-xs-10 col-xs-offset-1">
 
    <% if user == current_user %> 
     <div class="row">
      <%= link_to 'プロフィール編集', edit_user_path(user), class: "col-xs-8 col-xs-offset-2 btn btn-default" %>
     </div>
    <% end %>
  </div>
 </div>
</div>