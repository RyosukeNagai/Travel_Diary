
<%= form_for [@shiori,@schedule] do |f| %>
<div class="container">
 <div class="row">
    <div class="col-xs-12">
      <div class="schedule__title">
        Schedule_Edit
      </div>
    </div>
  </div>
</div>

  <div class="col-xs-12">
    <div class="row">
      <div class="col-xs-6">
        <div class="schedule__year">①_year</div>
      </div>
      <div class="col-xs-6">
        <div class="schedule__year-form">
          <%= f.select :year, (2020..2050), include_blank:"例：20◯◯",style:""%>
        </div>
      </div>
    </div>
      <br>
    <div class="row">
      <div class="col-xs-6">
        <div class="schedule__year">②_month</div>
      </div>
      <div class="col-xs-6">
        <div class="schedule__year-form">
          <%= f.select :month, (1..12), include_blank: "例：◯月" %>
        </div>
      </div>
    </div>
      <br>
    <div class="row">
      <div class="col-xs-6">
        <div class="schedule__year">③_day</div>
      </div>
      <div class="col-xs-6">
        <div class="schedule__year-form">
          <%= f.select :day, (1..31), include_blank: "例：◯日"%>
        </div>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-xs-6">
        <div class="schedule__year">④_time</div>
      </div>
      <div class="col-xs-6">
        <div class="schedule__year-form">
          <%= f.select :time, (0..24), include_blank:"例：9:00~"%>
        </div>
      </div>
    </div>
    <br>
    <div class="col-xs-6">
     <div class="schedule__year">⑤ plan</div>
    </div>
    <div class="col-xs-6">
      <div class="schedule__year-form">
        <%= f.text_area :plan, include_blank:"例：◯◯に到着" %>
      </div>
    </div>
    <br>
    <div class="col-xs-12">
      <%= f.submit "変更する", class:"btn btn-primary preparation__btn",style:""%>
    </div>
  </>
    <% end %>